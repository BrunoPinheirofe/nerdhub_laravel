{% extends "templates/base.html.twig" %}

{% block title %}Criar Conta
{% endblock %}

{% block content %}
	<div class="min-h-[80vh] flex items-center justify-center font-['Pixelify_Sans'] bg-gray-50">
		<section
			class="flex flex-col lg:flex-row w-full max-w-4xl mx-auto shadow-2xl overflow-hidden bg-white border-2 border-black rounded-lg">

			<!-- Formulário de Registro -->
			<div class="w-full lg:w-1/2 flex items-center justify-center p-8">
				<div class="w-full max-w-md text-center">
					<h1 class="text-4xl font-bold mb-2">Criar Conta</h1>
					<p class="text-md text-gray-600 mb-6">Preencha os dados abaixo</p>

					{% if flash %}
						<div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative mb-4" role="alert">
							<span class="block sm:inline font-['Poppins']">{{ flash }}</span>
						</div>
					{% endif %}

					<form action="{{ base_url }}/register" method="POST" class="space-y-4 text-left">
						<div>
							<label for="username" class="block text-sm font-medium text-gray-700 font-['Poppins']">Nome de Usuário</label>
							<input type="text" name="username" id="username" required class="mt-1 block w-full px-4 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-900 focus:border-blue-900 font-['Poppins']"/>
						</div>
						<div>
							<label for="email" class="block text-sm font-medium text-gray-700 font-['Poppins']">E-mail</label>
							<input type="email" name="email" id="email" required class="mt-1 block w-full px-4 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-900 focus:border-blue-900 font-['Poppins']"/>
						</div>
						<div>
							<label for="senha" class="block text-sm font-medium text-gray-700 font-['Poppins']">Senha</label>
							<input type="password" name="senha" id="senha" required class="mt-1 block w-full px-4 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-900 focus:border-blue-900 font-['Poppins']"/>
						</div>
						<div>
							<label for="confirmar_senha" class="block text-sm font-medium text-gray-700 font-['Poppins']">Confirmar Senha</label>
							<input type="password" name="confirmar_senha" id="confirmar_senha" required class="mt-1 block w-full px-4 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-900 focus:border-blue-900 font-['Poppins']"/>
						</div>

						<button type="submit" class="w-full bg-[#001A35] hover:bg-[#013267] text-white py-2 rounded-md transition duration-300">Registrar</button>
					</form>
					<p class="mt-6 text-sm text-gray-600 text-center font-['Poppins']">Já tem uma conta?
						<a href="{{ base_url }}/login" class="text-blue-600 hover:underline">Entrar</a>
					</p>
				</div>
			</div>

			<!-- Imagem -->
			<div class="hidden lg:block w-1/2 bg-cover bg-center" style="background-image: url('https://source.unsplash.com/random/800x600/?code,developer');"></div>

		</section>
	</div>
{% endblock %}
